<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="249.0" prefWidth="424.0" stylesheets="@../../recursos/css/CssAjustes.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controlador.AjustesController">
   <top>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#regresar" styleClass="back-button" text="←" StackPane.alignment="CENTER_LEFT" />
            <Label alignment="CENTER" prefHeight="28.0" prefWidth="90.0" text="Ajustes">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
         <styleClass>
            <String fx:value="menu-title" />
            <String fx:value="titulo" />
         </styleClass>
      </StackPane>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" styleClass="title-label" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="59.0" prefWidth="337.0" spacing="10.0" styleClass="bottom-border">
                     <children>
                        <Label text="¿Quien empieza?" textFill="WHITE" />
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                           <children>
                              <ToggleButton fx:id="btnJugador1" mnemonicParsing="false" selected="true" text="Jugador 1">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="tglJugador" />
                                 </toggleGroup>
                              </ToggleButton>
                              <ToggleButton fx:id="btnJugador2" mnemonicParsing="false" text="Jugador 2" toggleGroup="$tglJugador" />
                           </children>
                           <padding>
                              <Insets bottom="5.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets left="15.0" right="15.0" />
               </padding>
            </VBox>
            <HBox alignment="CENTER" prefHeight="73.0" spacing="20.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                     <children>
                        <Label text="Jugador 1 es:" />
                        <ToggleButton fx:id="btnX" mnemonicParsing="false" selected="true" text="X">
                           <toggleGroup>
                              <ToggleGroup fx:id="tglSimbolo" />
                           </toggleGroup>
                        </ToggleButton>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                     <children>
                        <Label text="Jugador 2 es:" />
                        <ToggleButton fx:id="btnO" mnemonicParsing="false" text="O" toggleGroup="$tglSimbolo" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets top="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
